<% @title = "Log in to Home Keep" %>

<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4">
    <h1>Log in to <span class="brand_font">HK</span> <a style="cursor: pointer; font-size: 0.5em; " onclick="alert('\n\nFor this demo, please use the following credentials:\n\nemail: demo@demo.com\npassword: demo\n\n');">ℹ️</a></h1>
    <!-- '\n\nFor this demo, please use: \"demo@demo.com\", \"demo\"' -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "demo@demo.com",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "demo",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: " Remember me", label_html: {style: "margin-left: 10px;" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-primary" %>
      </div>
    <% end %>
      <div class="col-xs-12">
        <hr>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
